<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:padding="@dimen/_20sdp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="@dimen/_5sdp"
            tools:ignore="UselessParent">

            <com.balloon.utils.ShapesImage
                android:id="@+id/siListImage"
                android:orientation="vertical"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_150sdp"
                android:scaleType="centerInside"
                android:layout_centerInParent="true"
                android:src="@drawable/logo_balloon"
                app:shape="guitar_pick"/>


            <RelativeLayout
                android:id="@+id/rlProfile"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded_view_5sdp"
                android:paddingHorizontal="@dimen/_10sdp"
                android:paddingVertical="@dimen/_2sdp"
                android:gravity="center"
                android:foreground="@drawable/ripple_rec"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_alignParentLeft="true"
                >

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bhavna"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/txtSizeSmall"
                    android:fontFamily="@font/poppins_regular"
                    />
                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/ivProfile"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/logo"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/tvUserName"
                    android:layout_marginLeft="@dimen/_5sdp"
                    app:civ_border_color="@color/color_view"
                    app:civ_border_width="0dp"
                   />

            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/rlType"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded_view_5sdp"
                android:paddingHorizontal="@dimen/_10sdp"
                android:paddingVertical="@dimen/_2sdp"
                android:gravity="center"
                android:foreground="@drawable/ripple_rec"
                android:layout_marginTop="@dimen/_80sdp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_30sdp"
                >

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/ivType"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/logo"
                    android:visibility="gone"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_5sdp"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Coffee"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/txtSizeSmall"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_toRightOf="@id/ivType"
                    />


            </RelativeLayout>




        </RelativeLayout>
    </LinearLayout>
</layout>