                    <com.balloon.utils.ShapesImage
                        android:id="@+id/ivProfile"
                        android:layout_width="@dimen/_170sdp"
                        android:layout_height="@dimen/_150sdp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/logo_balloon"
                        android:layout_marginTop="@dimen/_20sdp"
                       android:scaleType="centerCrop"
                        app:shape="guitar_pick" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/progressView"
                        android:layout_marginTop="@dimen/_100sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        >

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivBalloon"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:scaleType="fitXY"
                            app:tint="@color/color_1786B3"
                            android:src="@drawable/bottom_bloon" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txtPercentage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0%"
                            android:textAllCaps="true"
                            android:textSize="@dimen/txtSizeXSmall"
                            android:layout_centerHorizontal="true"
                          android:layout_centerInParent="true"
                            android:fontFamily="@font/gotham_book"
                            android:textColor="@color/colorWhite"
                            android:layout_marginBottom="@dimen/_10sdp"
                            />


                    </RelativeLayout>

                    <com.skydoves.progressview.ProgressView
                        android:id="@+id/progressView"
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_120sdp"
                        app:progressView_orientation="vertical"
                        app:progressView_colorBackground="@color/color_1786B3"
                        app:progressView_colorGradientEnd="@color/colorWhite"
                        app:progressView_colorGradientStart="@color/colorWhite"
                        app:progressView_colorProgress="@color/color_1786B3"
                        app:progressView_highlightAlpha="0.8"
                        app:progressView_highlightColor="@color/color_1786B3"
                        app:progressView_highlightWidth="@dimen/_1sdp"
                        app:progressView_labelColorInner="@color/white"
                        app:progressView_labelColorOuter="@color/black"
                        app:progressView_labelSize="@dimen/txtSizeSmall"
                        app:progressView_labelSpace="@dimen/_12sdp"
                        app:progressView_labelText="A\nI\nR"
                        app:progressView_labelTypeface="normal"
                        app:progressView_padding="@dimen/_1sdp"
                        app:progressView_progress="30"
                        app:progressView_radius="@dimen/_8sdp"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/_50sdp"
                        />

