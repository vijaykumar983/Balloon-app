                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvFullName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Full Name"
                        android:fontFamily="@font/gotham_medium"
                        android:textSize="@dimen/txtSizeXXLarge"
                        android:foreground="@drawable/ripple_rec"
                        android:textColor="@color/color_939393"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_below="@id/ivProfile"
                        android:layout_centerHorizontal="true"
                        />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FullName@gmail.com"
                        android:fontFamily="@font/gotham_book"
                        android:textSize="@dimen/txtSizeNormal"
                        android:foreground="@drawable/ripple_rec"
                        android:textColor="@color/color_939393"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_below="@id/tvFullName"
                        android:visibility="invisible"
                        android:layout_centerHorizontal="true"
                        />

                    <LinearLayout
                        android:id="@+id/llBioPhoto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_below="@id/tvEmail"
                        android:gravity="center"
                        android:weightSum="2"

                        android:layout_marginTop="@dimen/_20sdp"
                        >

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnMyBio"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:text="My Bio"
                            android:textAllCaps="true"
                            android:elevation="@dimen/_2sdp"
                            android:foreground="@drawable/ripple_round"
                            android:fontFamily="@font/gotham_book"
                            android:background="@drawable/bg_corner_rounded_btn_8dp"
                            android:textColor="@color/colorWhite"
                            android:layout_weight="1"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/_15sdp"
                            />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnPhoto"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:text="Photos"
                            android:textAllCaps="true"
                            android:layout_weight="1"
                            android:elevation="@dimen/_2sdp"
                            android:foreground="@drawable/ripple_round"
                            android:fontFamily="@font/gotham_book"
                            android:background="@drawable/bg_rounded_corner_white_8dp"
                            android:textColor="@color/color_1786B3"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="@dimen/_15sdp"
                            />
                    </LinearLayout>

