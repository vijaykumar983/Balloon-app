<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:clipToPadding="false"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rlHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/_15sdp"
            android:paddingVertical="@dimen/_10sdp"
            android:gravity="center_vertical"
            >

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivBack"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_alignParentLeft="true"
                android:foreground="@drawable/ripple_round"
                android:tint="@color/color_1786B3"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_back_arrow" />


            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/imvUserProfile"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_toRightOf="@id/ivBack"
                android:src="@drawable/image5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toRightOf="@id/imvUserProfile"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_centerVertical="true"
                >


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jassi Gill"
               android:layout_gravity="center_vertical"
                android:fontFamily="@font/gotham_medium"
                android:textSize="@dimen/txtSizeNormal"
                android:textColor="@color/colorBlack"
                />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivOnlineStatus"
                        android:layout_width="@dimen/_8sdp"
                        android:layout_height="@dimen/_8sdp"
                        app:srcCompat="@drawable/online_green"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_gravity="center_vertical"
                        />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvSeen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="seen"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/gotham_medium"
                        android:textSize="@dimen/txtSizeSmall"
                        android:textColor="@color/color_9B9B9B"
                        />

                </LinearLayout>


            </LinearLayout>

        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            >
            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/messageSwipeLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="@dimen/_50sdp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/messagesList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/chat_row"
                    app:stackFromEnd="true"
                    />

            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

            <include
                android:id="@+id/llMessageArea"
                layout="@layout/message_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/_5sdp"/>
        </RelativeLayout>

    </LinearLayout>
</layout>