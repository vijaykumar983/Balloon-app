                        android:layout_marginBottom="@dimen/_10sdp"
                        />
                </RelativeLayout>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/relativeBalloon1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:layout_toLeftOf="@id/progressViewAir"
                android:layout_marginTop="@dimen/_140sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:visibility="gone"
                >
                <RelativeLayout
                    android:id="@+id/rlBalloon1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivBalloon1"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:scaleType="fitXY"
                        app:tint="@color/color_1786B3"
                        android:src="@drawable/bottom_bloon" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvAirPercentage1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0%"
                        android:textAllCaps="true"
                        android:textSize="@dimen/txtSizeXSmall"
                        android:layout_centerHorizontal="true"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/gotham_book"
                        android:textColor="@color/colorWhite"
                        android:layout_marginBottom="@dimen/_10sdp"
                        />
                </RelativeLayout>

            </RelativeLayout>

            <com.skydoves.progressview.ProgressView
                android:id="@+id/progressViewAir"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_120sdp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/_50sdp"
                app:progressView_colorBackground="@color/color_1786B3"
                app:progressView_colorGradientEnd="@color/colorWhite"
                app:progressView_colorGradientStart="@color/colorWhite"
                app:progressView_colorProgress="@color/color_1786B3"
                app:progressView_highlightAlpha="0.8"
                app:progressView_highlightColor="@color/color_1786B3"
                app:progressView_highlightWidth="@dimen/_1sdp"
                app:progressView_labelColorInner="@color/white"
                app:progressView_labelColorOuter="@color/white"
                app:progressView_labelSize="@dimen/txtSizeSmall"
                app:progressView_labelSpace="@dimen/_60sdp"
                app:progressView_labelText=""
                app:progressView_labelTypeface="normal"
                app:progressView_orientation="vertical"
                app:progressView_padding="@dimen/_1sdp"
                app:progressView_progress="0"
                app:progressView_radius="@dimen/_8sdp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:rotation="180"
                    android:text="A\nI\nR"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txtSizeSmall" />
            </com.skydoves.progressview.ProgressView>

