            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvFullName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivProfile"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_15sdp"
                android:fontFamily="@font/gotham_medium"
                android:foreground="@drawable/ripple_rec"
                android:text=""
                android:textColor="@color/color_939393"
                android:textSize="@dimen/txtSizeXXLarge" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvFullName"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/gotham_book"
                android:foreground="@drawable/ripple_rec"
                android:text="FullName@gmail.com"
                android:textColor="@color/color_939393"
                android:textSize="@dimen/txtSizeNormal"
                android:visibility="invisible" />

            <LinearLayout
                android:id="@+id/llBioPhoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvEmail"
                android:layout_marginTop="@dimen/_20sdp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnPhoto"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_corner_rounded_btn_8dp"
                    android:elevation="@dimen/_2sdp"
                    android:fontFamily="@font/gotham_book"
                    android:foreground="@drawable/ripple_round"
                    android:text="Photos"
                    android:textAllCaps="true"
                    android:textColor="@color/colorWhite" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnMyBio"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_rounded_corner_white_8dp"
                    android:elevation="@dimen/_2sdp"
                    android:fontFamily="@font/gotham_book"
                    android:foreground="@drawable/ripple_round"
                    android:text="Bio"
                    android:textAllCaps="true"
                    android:textColor="@color/color_1786B3" />


            </LinearLayout>

